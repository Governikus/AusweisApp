{
  "version": 6,
  "include": [
    "ci.json"
  ],
  "configurePresets": [
    {
      "name": "ci-android",
      "hidden": true,
      "inherits": "ci-with-libs",
      "toolchainFile": "${sourceDir}/cmake/android.toolchain.cmake"
    },
    {
      "name": "ci-android-apk",
      "inherits": "ci-android",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "ci-android-apk-review",
      "inherits": "ci-android",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "DEBUG"
      }
    },
    {
      "name": "ci-android-aar",
      "inherits": "ci-android",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "INTEGRATED_SDK": "ON"
      }
    },
    {
      "name": "ci-android-aar-review",
      "inherits": "ci-android",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "DEBUG",
        "INTEGRATED_SDK": "ON"
      }
    }
  ]
}
